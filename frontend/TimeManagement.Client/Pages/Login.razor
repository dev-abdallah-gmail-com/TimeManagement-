@page "/login"
@using TimeManagement.Client.Services
@inject IApiService Api
@inject TimeManagement.Client.Services.CustomAuthStateProvider AuthStateProvider
@inject NavigationManager Navigation
@using System.Net.Http.Json

<h3>Login</h3>

<div class="mb-3">
    <label class="form-label">Email</label>
    <input @bind="model.Email" class="form-control" />
</div>
<div class="mb-3">
    <label class="form-label">Password</label>
    <input type="password" @bind="model.Password" class="form-control" />
</div>
<button class="btn btn-primary" @onclick="Submit">Login</button>

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger mt-2">@error</div>
}

@code {
    private LoginModel model = new LoginModel();
    private string? error;

    private async Task Submit()
    {
        error = null;
        try
        {
            var auth = await Api.LoginAsync(new LoginModel { Email = model.Email, Password = model.Password });
            if (auth == null || string.IsNullOrWhiteSpace(auth.Token))
            {
                error = "Invalid email or password.";
                return;
            }

            await AuthStateProvider.NotifyUserAuthentication(auth.Token);

            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            // Surface exception message to the UI instead of letting Blazor show the fatal overlay
            error = ex.Message;
        }
    }
}
