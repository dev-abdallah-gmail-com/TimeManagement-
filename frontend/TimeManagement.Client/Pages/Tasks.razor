@page "/tasks"
@using TimeManagement.Client.Services
@inject IApiService Api
@using System.Net.Http.Json

<PageTitle>Tasks</PageTitle>

<h3>Tasks</h3>

<div class="mb-3">
    <label class="form-label">New task title</label>
    <input @bind="newTitle" class="form-control" />
</div>
<button class="btn btn-success mb-2 me-2" @onclick="AddTask">Add task</button>
<button class="btn btn-primary mb-2" @onclick="LoadTasks">Refresh</button>

@if (!string.IsNullOrEmpty(loadError))
{
    <div class="alert alert-danger">@loadError</div>
}

@if (tasks == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Creator</th>
                <th>Assignee</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in tasks)
            {
                <tr>
                    <td><a href="/tasks/@t.Id">@t.Title</a></td>
                    <td>@t.Status.ToString()</td>
                    <td>@t.CreatorEmail</td>
                    <td>@t.AssigneeEmail</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TaskDto>? tasks;
    private string? loadError;
    private string newTitle = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTasks();
    }

    private async Task LoadTasks()
    {
        try
        {
            // Call the API service
            var list = await Api.GetAllTasksAsync();
            tasks = list.Select(t => new TaskDto
            {
                Id = t.Id,
                Title = t.Title,
                Status = (TaskStatus)t.Status,
                CreatorEmail = t.CreatorEmail,
                AssigneeEmail = t.AssigneeEmail
            }).ToList();
            loadError = null;
        }
        catch (Exception ex)
        {
            // Avoid unhandled exception during render; show a friendly message
            loadError = $"Failed to load tasks: {ex.Message}";
            tasks = new List<TaskDto>();
        }
    }

    private async Task AddTask()
    {
        if (string.IsNullOrWhiteSpace(newTitle)) return;

        try
        {
            var create = new CreateTaskModel { Title = newTitle };
            var created = await Api.CreateTaskAsync(create);
            if (created != null)
            {
                newTitle = string.Empty;
                await LoadTasks();
            }
            else
            {
                loadError = "Failed to create task";
            }
        }
        catch (Exception ex)
        {
            loadError = $"Failed to create task: {ex.Message}";
        }
    }

    class TaskDto
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public TaskStatus Status { get; set; } = TaskStatus.Pending;
        public string CreatorEmail { get; set; } = string.Empty;
        public string? AssigneeEmail { get; set; }
    }

    // Local enum mirrors server-side Models.TaskStatus so numeric values deserialize correctly
    enum TaskStatus
    {
        Pending = 0,
        Assigned = 1,
        Accepted = 2,
        InProgress = 3,
        PendingApproval = 4,
        Completed = 5,
        Approved = 6,
        Rejected = 7
    }
}
