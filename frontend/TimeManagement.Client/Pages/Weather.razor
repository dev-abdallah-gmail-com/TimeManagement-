@page "/weather"
@inject HttpClient Http
@inject NavigationManager NavManager

<PageTitle>Weather</PageTitle>

<h1>Weather</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (!string.IsNullOrEmpty(loadError))
{
    <div class="alert alert-danger">@loadError</div>
}

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th aria-label="Temperature in Celsius">Temp. (C)</th>
                <th aria-label="Temperature in Farenheit">Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.TemperatureF</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast[]? forecasts;
    private string? loadError;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Ensure we request the sample-data from the client app origin (NavigationManager.BaseUri)
            var uri = new Uri(NavManager.BaseUri + "sample-data/weather.json");
            forecasts = await Http.GetFromJsonAsync<WeatherForecast[]>(uri);
            loadError = null;
        }
        catch (HttpRequestException ex)
        {
            loadError = $"Failed to load weather data: {ex.Message}";
            forecasts = Array.Empty<WeatherForecast>();
        }
    }

    public class WeatherForecast
    {
        public DateOnly Date { get; set; }

        public int TemperatureC { get; set; }

        public string? Summary { get; set; }

        public int TemperatureF => 32 + (int)(TemperatureC / 0.5556);
    }
}
